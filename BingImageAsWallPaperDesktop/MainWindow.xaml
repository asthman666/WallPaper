<Window x:Class="BingImageAsWallPaperDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingImageAsWallPaperDesktop"
        mc:Ignorable="d"
        Title="WallPaper" Height="180" Width="300" ResizeMode="CanMinimize" SizeToContent="Manual" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="RandomWallpaper" Margin="15,10,148,82" Click="Set_Random_Wapper" IsEnabled="false">Random WallPaper</Button>
        <Button x:Name="NewestWallpaper" Click="Set_Newest_Wallpaper" Margin="158,10,5,82" IsEnabled="false">Newest WallPaper</Button>
        <Button x:Name="NextWallpaper" Margin="15,93,150,10" Click="Set_Next_Wallpaper" IsEnabled="false">Next WallPaper</Button>
        <Button x:Name="DownloadPicture" Click="Download_Bing_Picture" Margin="158,93,5,10">Download Picture</Button>
    </Grid>
</Window>
